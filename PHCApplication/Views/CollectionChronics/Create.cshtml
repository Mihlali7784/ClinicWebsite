@model PHCApplication.Models.CollectionChronic
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PharmacistChronicMedLayout.cshtml";
}

<h1>Create</h1>

<h4>CollectionChronic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CollectionDate" class="control-label"></label>
                <input asp-for="CollectionDate" class="form-control" type="date" />
                <span asp-validation-for="CollectionDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <select asp-for="status" class="form-control">
                    <option value="Uncollected">Uncollected</option>
                    <option value="Collected" disabled>Collected</option>
                </select>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

