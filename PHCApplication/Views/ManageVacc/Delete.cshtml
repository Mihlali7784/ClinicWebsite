@model PHCApplication.Models.VaccineAvail
@{
    var errorMessage = TempData["ErrorMessage"]?.ToString();
}

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error!</strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}



<div class="row">
    <div class="col-md-5 offset-md-1">
        <form method="post" asp-action="Delete">
            <input asp-for="ID" hidden />
            <div class="border p-3">
                <div class="form-group row">
                    <h2 class="text-black-50 pl-3">Delete Vaccine</h2>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group row">
                            <div class="col-6">
                                <label asp-for="ID"></label>
                            </div>
                            <div class="col-6">
                                <label asp-for="VaccName"></label>
                            </div>
                            <div class="col-6">
                                <label asp-for="Available"></label>
                            </div>


                        </div>


                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-danger w-75" value="Delete" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success w-75">Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </form>
    </div>

</div>

@section Scripts {
