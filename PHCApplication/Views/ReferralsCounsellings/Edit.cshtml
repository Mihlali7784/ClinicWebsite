@model PHCApplication.Models.ReferralsCounselling
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DocMentalHealthLayout.cshtml";
}

<h1>Edit</h1>

<h4>ReferralsCounselling</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
