            </div>
            <div class="form-group">
                <label asp-for="Medication" class="control-label"></label>
                <select asp-for="Medication" class="form-control">
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
                <span asp-validation-for="Medication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc" class="control-label"></label>
                <textarea asp-for="Desc" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
