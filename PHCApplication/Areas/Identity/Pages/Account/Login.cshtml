@page
@model LoginModel

@{
    ViewData["Title"] = "";
    Layout = "/Areas/Identity/Pages/_ClashLayout.cshtml";
}

<head>
    <meta charset="utf-8">
    <title>ClashCode</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/HomepageStyle/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/HomepageStyle/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/HomepageStyle/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/HomepageStyle/css/style.css" rel="stylesheet">
</head>

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-10 offset-md-1">
        <section>
            <div class="text-center">
                <div class="login-form-icon">
                    <i class="fas fa-user-circle fa-9x text-secondary"></i>
                </div>
            </div>
            <form id="account" method="post" class="transparent-form">
                <h3 class="text-black text-center text-capitalize">Sign In</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div>
                    <style>
                        .form-check-input[type="radio"] {
                            cursor: pointer;
                        }
                    </style>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-info">Log in</button>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                    </div>
                    <div class="col-md-4">
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                    </div>
                    <div class="col-md-4">
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                    </div>
                </div>

            </form>
        </section>
    </div>
 
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
