            </div>
            <hr />
            <br />
            <div class="form-floating">
                <select asp-for="Input.MaritalStatus" class="form-select" aria-required="true" id="dropdown-ability">
                    <option value="">--Select Marital Status--</option>
                    <option value="Single">Single</option>
                    <option value="Married">Married</option>
                    <option value="Divorced">Divorced</option>
                    <option value="Widowed">Widowed</option>
                    <option value="Other">Other</option>
                </select>
                <label asp-for="Input.MaritalStatus">Marital Status</label>
                <span asp-validation-for="Input.MaritalStatus" class="text-danger"></span>
            </div>
             <hr />
            <br />

