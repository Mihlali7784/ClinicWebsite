                <input asp-for="Input.ContactNumber" class="form-control" autocomplete="ContactNumber" aria-required="true" placeholder="Contact Number" />
                <label asp-for="Input.ContactNumber">Contact Number</label>
                <span asp-validation-for="Input.ContactNumber" class="text-danger"></span>
