                <label asp-for="Input.StreetAddress">Street Address</label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <hr />
            <br />
            <div class="form-floating">
                <input asp-for="Input.City" class="form-control" autocomplete="city" aria-required="true" placeholder="City" />
                <label asp-for="Input.City">City</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <hr />
            <br />
            <div class="form-floating">
                <input asp-for="Input.PostalAddress" class="form-control" autocomplete="PostalAddress" aria-required="true" placeholder="Postal Address" />
                <label asp-for="Input.PostalAddress">Postal Address</label>
