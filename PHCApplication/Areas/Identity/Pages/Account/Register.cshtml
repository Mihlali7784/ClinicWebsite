<div class="row">
    <div class="col-md-10 offset-md-1">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-primary">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating" hidden="hidden">
              <input asp-for="Input.RegistrationDateTime" class="form-control" autocomplete="off" aria-required="true" placeholder="YYYY-MM-DD HH:mm" id="registrationDateTime" />
               <label asp-for="Input.RegistrationDateTime">Registration Date</label>
           <span asp-validation-for="Input.RegistrationDateTime" class="text-danger"></span>
            </div>

           @* <div class="form-floating">
                <input asp-for="Input.RegistrationDateTime" class="form-control" autocomplete="off" aria-required="true" placeholder="YYYY-MM-DD HH:mm" />
                <label asp-for="Input.RegistrationDateTime">Registration Date </label>
                <span asp-validation-for="Input.RegistrationDateTime" class="text-danger"></span>
            </div>*@



             <hr />
            <br />
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="First Name" />
                <label asp-for="Input.FirstName">First Name</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <hr />
            <br />
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" aria-required="true" placeholder="Last Name" />
                <label asp-for="Input.LastName">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
             <hr />
            <br />
            <div class="form-floating">
